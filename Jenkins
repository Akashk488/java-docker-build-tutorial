pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage ('checkout_scm'){
        steps{
            checkout scm
        }
        }

        stage ('Maven_Build'){
        steps{
            sh 'mvn clean package'
        }
        }       

        stage ('Docker Build'){
        steps{
           sh 'sudo docker build -t java-docker-build:v1 . -s'
           sh 'sudo docker run --name java-docker-build-c1 -p 8019:8123 -d java-docker-build:v1 '
            
        }
        }
        
    }
}
